#This is for RaspberryPi size window.
#NOT for PC.

WaitTime="0.5s"

#DecideMotion
lxterminal  --geometry=45x11 --working-directory=/home/pi/jibiki/2019_ControlAutoRobot/Main/
sleep $WaitTime
xdotool windowmove `xdotool getwindowfocus` 0 258

#ControlMotor
lxterminal  --geometry=24x9 --working-directory=/home/pi/jibiki/2019_ControlAutoRobot/SendMotor/
sleep $WaitTime
xdotool windowmove `xdotool getwindowfocus` 0 0
xdotool windowsize `xdotool getwindowfocus` 210 95

#CorrectTilt
lxterminal  --geometry=21x10 --working-directory=/home/pi/jibiki/2019_ControlAutoRobot/GNDEncoder2/
sleep $WaitTime
xdotool windowmove `xdotool getwindowfocus` 210 35
xdotool windowsize `xdotool getwindowfocus` 167 100

#SwitchSlave
lxterminal  --geometry=21x10 --working-directory=/home/pi/jibiki/2019_ControlAutoRobot/CalcTilt/
sleep $WaitTime
xdotool windowmove `xdotool getwindowfocus` 0 155
xdotool windowsize `xdotool getwindowfocus` 210 60

